<?xml version="1.0" encoding="utf-8"?>
<!--Linear Layout 完成设计-->
<!--背景色设置为 #FFFFFF-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutputMarket"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10">

        <!--字(text)未设：动态-->
        <!--字体(font family)未设-->
        <!--字颜色暂设 #000000-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/market_direction"
            android:height="@dimen/dp_65"
            android:text="helloworld"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_48" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_330"
        android:orientation="vertical">

        <!--地图-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <!--RelativeLayout 为了按钮排版-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--按钮样式(background)未设 应存于drawable-->
            <!--字体(font family)未设-->
            <!--字颜色暂设 #000000-->
            <Button
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:id="@+id/b_end_market"
                android:text="@string/b_end_market"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"/>

            <!--按钮样式(background)未设 应存于drawable-->
            <!--字体(font family)未设-->
            <!--字颜色暂设 #000000-->
            <Button
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:id="@+id/b_omt_setting"
                android:text="@string/b_setting"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>