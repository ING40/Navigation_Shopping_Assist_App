<?xml version="1.0" encoding="utf-8"?>
<!--Linear Layout 完成设计-->
<!--背景色设置为 #FFFFFF-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5">

        <!--字体(font family)未设-->
        <!--字颜色暂设 #000000-->
        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="@dimen/dp_35"
            android:text="@string/b_product"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:orientation="vertical">

        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_165"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_35"
        android:paddingLeft="@dimen/dp_35"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10">

        <!--拍照区域-->

    </LinearLayout>

    <!--边框用background(drawable)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_15">

        <!--字体(font family)未设-->
        <!--字颜色暂设 #000000-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:id="@+id/product_detail"
            android:height="@dimen/dp_25"
            android:text="@string/product_detail"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20"/>

        <!--线条色暂设 #000000-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#000000"/>

        <!--字(text)未设：动态-->
        <!--字体(font family)未设-->
        <!--字颜色暂设 #000000-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_5"
            android:id="@+id/p_details"
            android:height="@dimen/dp_170"
            android:text="helloworld"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <!--RelativeLayout 为了按钮排版-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--按钮样式(background)未设 应存于drawable-->
            <!--字体(font family)未设-->
            <!--字颜色暂设 #000000-->
            <Button
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:id="@+id/b_product_back"
                android:text="@string/b_back"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"/>

            <!--按钮样式(background)未设 应存于drawable-->
            <!--字体(font family)未设-->
            <!--字颜色暂设 #000000-->
            <Button
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:id="@+id/b_product_setting"
                android:text="@string/b_setting"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>