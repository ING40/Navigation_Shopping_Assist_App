<?xml version="1.0" encoding="utf-8"?>

<!--Linear Layout 完成设计-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E8EADC"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    android:paddingTop="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20">

        <!--字体(font family)未设-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app_name"
            android:height="@dimen/dp_70"
            android:text="@string/app_name"
            android:fontFamily=""
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_48"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_25"
        android:paddingRight="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_60">

        <!--字体(font family)未设-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/b_mall"
            android:background="@drawable/b_mall"
            android:text="@string/b_mall"
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_25"
        android:paddingRight="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_60">

        <!--字体(font family)未设-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/b_market"
            android:background="@drawable/b_mall"
            android:text="@string/b_market"
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_25"
        android:paddingRight="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_60">

        <!--字体(font family)未设-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/b_product"
            android:background="@drawable/b_mall"
            android:text="@string/b_product"
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_25"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_25"
        android:paddingRight="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_60">

        <!--字体(font family)未设-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/b_setting"
            android:background="@drawable/b_mall"
            android:text="@string/b_setting"
            android:textAlignment="center"
            android:textColor="#71838F"
            android:textSize="@dimen/sp_25"/>


    </LinearLayout>

</LinearLayout>